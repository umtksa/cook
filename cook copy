#!/bin/bash

# Define recipient email address
recipient="recipient@example.com"

# Define subject and body of the email
subject="Your Subject Here"
body="Hello,

I hope this email finds you well. This is the body of the email.

Best regards,
Your Name"

# Encode the subject and body for use in the mailto URL
encoded_subject=$(echo -n "$subject" | xxd -plain | tr -d '\n' | sed 's/\(..\)/%\1/g')
encoded_body=$(echo -n "$body" | xxd -plain | tr -d '\n' | sed 's/\(..\)/%\1/g')

# Construct the mailto URL
mailto_url="mailto:$recipient?subject=$encoded_subject&body=$encoded_body"

# Open the default mail client with the pre-filled email
xdg-open "$mailto_url"
